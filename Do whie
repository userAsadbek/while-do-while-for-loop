#include <iostream>
#include <iomanip>
using namespace  std;
int main() {
    int score1,score2,score3;
    char again;
    double average;
    //do while loop tests at least one time and need semicolon
    do {
        cout<<"Enter your 3 test scores\n";
        cout<<"I will tell you average";
        cin>>score1>>score2>>score3;
        average=(score1+score2+score3)/3;
        cout<<"The average is "<<average<<endl;
        cout<<"Do you want to calculate again";
        cin>>again; }
    while (again=='Y' || again=='y');

    return 0;
}
